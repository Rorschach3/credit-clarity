{
  "name": "credit-clarity",
  "private": true,
  "workspaces": [
    "frontend",
    "CreditClarity"
  ],
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "dev": "concurrently \"npm:dev -w frontend\" \"python -m uvicorn --app-dir backend main:app --reload --host 0.0.0.0 --port 8000\"",
    "dev:frontend": "npm -w frontend run dev",
    "dev:backend": "python -m uvicorn --app-dir backend main:app --reload --host 0.0.0.0 --port 8000",
    "lint": "npm -w frontend run lint",
    "build": "npm -w frontend run build",
    "test": "npm -w frontend run test"
  },
  "devDependencies": {
    "concurrently": "^9.2.0"
  },
  "dependencies": {
    "@clerk/backend": "^2.7.1",
    "@clerk/clerk-react": "^5.41.0",
    "@clerk/mcp-tools": "^0.3.1",
    "@vercel/mcp-adapter": "^1.0.0",
    "react-dom": "^18.2.0",
    "react": "^18.2.0",
    "zod": "^3.25.76"
  }
}
