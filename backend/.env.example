# Backend Environment Configuration Template
# Copy this to .env and fill in your actual values
# NEVER commit .env to version control

# Environment
ENVIRONMENT=development
# Debug mode - enables FastAPI debug mode with detailed error pages (set to "true" for development, "false" for production)
DEBUG=false

# Database - Supabase
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here
DATABASE_URL=postgresql://user:password@host:5432/database

# Google Cloud - Document AI
GOOGLE_CLOUD_PROJECT_ID=your-project-id
GOOGLE_CLOUD_LOCATION=us
DOCUMENT_AI_PROCESSOR_ID=your-processor-id
# Path to service account JSON file (not the key itself!)
GOOGLE_APPLICATION_CREDENTIALS=./service-account.json

# AI Services
GEMINI_API_KEY=your_gemini_api_key_here
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# AWS (if needed)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1

# Stripe
STRIPE_SECRET_KEY=sk_test_your_test_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key_here

# Application Security
JWT_SECRET=generate_a_secure_random_string_here
ENCRYPTION_KEY=generate_another_secure_random_string

# Email Service (if using Resend)
RESEND_API_KEY=your_resend_api_key_here

# Redis (optional)
REDIS_URL=redis://localhost:6379

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:8080

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# File Upload
MAX_FILE_SIZE_MB=50

# Development Flags (DISABLE IN PRODUCTION!)
BYPASS_AUTH=false
